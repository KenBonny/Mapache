{{!-- Navigation Page --}}
<header id="header" class="header header-topbar u-align-center">

  <div class="header-topbar-left">
    {{!-- Menu open  --}}
    <a href="#" id="menu-open" class="menu-open icon-menu"></a>
    {{!-- Logo and Page Name --}}
    <a class="header-logo u-align-center" href="{{@blog.url}}">{{#if @blog.logo}}<img src="{{@blog.logo}}" alt="{{@blog.title}}"/>{{else}}<span>{{@blog.title}}</span>{{/if}}</a>
  </div>

  <div class="header-topbar-center">
    {{!-- Form Search --}}
    <form class="search">
      <a href="#" class="search-btn hidden-on-small-screen icon-search"></a>
      <a href="#" id="search-close" class="search-btn show-on-small-screen icon-arrow_back"></a>
      <input class="search-field" type="search" placeholder="Search" autocomplete="off">
      <div id="search-result" class="autocomplete"></div>
    </form>
    {{!-- Open buttom search --}}
    <a href="#" id="search-open" class="search-open show-on-small-screen icon-search"></a>
  </div>

  <div class="header-topbar-right hidden-on-small-screen">
    <div class="header-social u-align-center">
      {{!-- Social navigation --}}
      <div class="header-social-link">
        <a href="https://twitter.com/bonny_ken" target="_blank"><span class="icon-twitter"></span></a>
        <a href="https://github.com/KenBonny" target="_blank"><span class="icon-github"></span></a>
        <a href="https://www.linkedin.com/in/kenbonny" target="_blank"><span class="icon-linkedin"></span></a>
      </div>
    </div>
  </div>

</header>

